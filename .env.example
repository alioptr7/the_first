# Environment variables template
# Copy this to .env and fill in your values

# ==================== DATABASE ====================
DB_NAME=response_network
DB_USER=postgres
DB_PASSWORD=your_secure_password_change_me
DB_HOST=postgres
DB_PORT=5432

# ==================== REDIS ====================
REDIS_URL=redis://redis:6380/0
REDIS_PORT=6380

# ==================== CELERY ====================
CELERY_BROKER_URL=redis://redis:6380/0
CELERY_RESULT_BACKEND=redis://redis:6380/1

# ==================== API ====================
API_V1_STR=/api/v1
API_PORT=8000
PROJECT_NAME=Response Network

# ==================== SECURITY ====================
SECRET_KEY=your_secret_key_change_me_at_least_32_chars
ALGORITHM=HS256

# ==================== FEATURES ====================
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# ==================== PATHS ====================
EXPORT_DIR=exports

# ==================== LOGGING ====================
LOG_LEVEL=INFO
